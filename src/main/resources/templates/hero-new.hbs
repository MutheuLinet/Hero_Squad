{{#partial "content"}}

    {{#each Heroes}}
        <div   class="d-inline-flex justify-content-around card text-white border-light mb-3 bg-primary"
               style="max-width: 20rem; margin-right: 1%; margin-left: 6%"
               id="cards">
            <div class="card-header text-success">Hero Name: {{name}}</div>
            <div class="card-body">
                <p class="card-text">Hero Age: {{age}}</p>
                <p class="card-text">Hero Power: {{specialPower}}</p>
                <p class="card-text">Hero Weakness: {{weakness}}</p>
            </div>
        </div>
    {{/each}}

{{/partial}}

{{>layout.hbs}}
