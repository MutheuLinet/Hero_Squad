{{#partial "content"}}
    {{#each Squads}}
        <div   class="d-inline-flex justify-content-around card text-white border-light mb-3 bg-primary"
               style="max-width: 20rem; margin-right: 1%; margin-left: 6%"
               id="cards">
            <div class="card-header text-success">Squad Name: {{squadName}}</div>
            <div class="card-body">
                <p class="card-text">Squad Size: {{maxSize}}</p>
                <p class="card-text">Squad Cause: {{squadCause}}</p>
            </div>
        </div>
    {{/each}}

{{/partial}}

{{>layout.hbs}}
